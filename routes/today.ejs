<html>
    <!-- CSS only -->
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">

<!-- JS, Popper.js, and jQuery -->
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js" integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8shuf57BaghqFfPlYxofvL8/KUEfYiJOMMV+rV" crossorigin="anonymous"></script>
<link href="https://fonts.googleapis.com/css2?family=Abril+Fatface&family=Secular+One&display=swap" rel="stylesheet">

<body>
    <div class="row" style="margin: 60px;font-family: 'Secular One', sans-serif;;">
      
            <% list.forEach(element => {%>
               <div class="col-lg-3" >
                <br><br>
                <div class="card" style="width: 18rem;background-color:#E72388; box-shadow:5px 10px rgb(109, 108, 108);">
                    
                    <img class="card-img-top" src="https://openweathermap.org/img/wn/<%=element.weather[0].icon%>@2x.png " style="text-align: center; width: 50%;height: 70%;background-color: white;">
                    <div class="card-body">
                      <h5 class="card-title" style="color:white;"><%= element.dt_txt.substr(11,20) %></h5>
                      <p class="card-text" style="color:white;"><%= element.weather[0].description %></p>
                      <p class="card-text" style="color: white;">Temp: <%= element.main.temp %>Â° C</p>
                     
                      <p class="card-text" style="color:white;">Humidity: <%= element.main.humidity %>%</p>
                      <p class="card-text" style="color:white;">Wind speed <%= element.wind.speed %> m/s</p>
                  
                      

                    </div>
                  </div>

               </div>
             
           
                
                
            <%});%>
    </div>

    <div class="two">
        <form action="/" method="POST">
            <input  id="city" type="hidden" name="city" value="<%=city%>" >
            <button class="btn btn-info btn-lg" type="submit">Back</button>
        </form>

    </div>
   
    
  




</body>

</html>